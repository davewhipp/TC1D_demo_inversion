#!/bin/bash

echo "[postBuild] Using toolchain from apt.txt (gcc-12, g++-12, gfortran)..."
export CC=gcc-12
export CXX=g++-12
export FC=gfortran

echo "[postBuild] Compiling ketch_aft and RDAAM_He using make..."
cd ketch_aft
make clean
make && make install
cd ../RDAAM_He
make clean
make && make install
cd ..

echo "[postBuild] Setting executable permissions..."
chmod +x bin/RDAAM_He
chmod +x bin/ketch_aft

echo "[postBuild] Done compiling executables."