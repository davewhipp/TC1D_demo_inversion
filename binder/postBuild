#!/bin/bash

echo "[postBuild] Installing gfortran..."
apt-get update && apt-get install -y gfortran make

echo "[postBuild] Compiling RDAAM_He and ketch_aft using make..."

cd ketch_aft
make && make install
cd ../RDAAM_He
make && make install
cd ..

chmod +x bin/RDAAM_He
chmod +x bin/ketch_aft

echo "[postBuild] Done compiling executables."